@model Uporabnik

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex justify-content-center">
    <img id="grbSlovenije" src="https://yt3.googleusercontent.com/ytc/AIdro_kawK0fMy1Ab2CTqgjX-Kn6SCxivc-qgtV7AUDA6sVVW0k=s900-c-k-c0x00ffffff-no-rj" alt="grb">
</div>

<div>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(model => model.UporabniskoIme, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UporabniskoIme, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UporabniskoIme, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Geslo, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Geslo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Geslo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Naprej</button>
            </div>
        </div>
    }
</div>
