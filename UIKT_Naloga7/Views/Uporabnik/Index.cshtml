@{
    ViewData["Title"] = "Index";
}

@model Uporabnik

<h1 id="naslov">Seznam prošenj uporabnika @Model.UporabniskoIme:</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Priimek</th>
            <th>Naziv</th>
            <th>Datum</th>
            <th>Stanje</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Prosnje != null)
        {
            @foreach (var prosnja in Model.Prosnje)
            {
                <tr>
                    <td>@prosnja.Ime</td>
                    <td>@prosnja.Priimek</td>
                    <td>@prosnja.Naziv</td>
                    <td>@prosnja.Datum</td>
                    <td>@prosnja.Stanje</td>
                </tr>
            }   
        }
    </tbody>
</table>

@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success" role="alert">
        @TempData["SuccessMessage"]
    </div>
}

<div class="container">
    <a asp-area="" asp-controller="Uporabnik" asp-action="NovaProsnja">Nova prošnja</a>
</div>

<div class="container">
    <a asp-area="" asp-controller="Uporabnik" asp-action="Odjava">Odjava</a>
</div>